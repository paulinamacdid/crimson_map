<div class="container my-3">
    <div class="row justify-content-center">
      <div class="col-12 col-sm-4 border">
        <h3>Been to <%= @facility.name %>? Write a review...</h3>
      <div class="form-border-container">
        <%= simple_form_for [@facility, @review] do |f| %>
          <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: { data: { controller: "star-rating" } }, style: "margin: 5px 20px; text-align: center;" %>
          <%= f.input :comment, label: false, placeholder: "comment here...", style: "margin: 10px; text-align: center;" %>
          <%= f.submit "Submit review", class: "button", style: "margin-bottom: 10px; text-align: center;" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
