<div style="width: 100%; height: 600px;"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div>
  <ul>
  <% @facilities.each do |facility| %>
    <li><%= facility.name %></li>
    <li><%= facility.rating %></li>
    <li><%= facility.location %></li>
     <% if facility.toilet.attatched? %>
     <% if facility.sanitary_products.attatched? %>
     <% if facility.baby_change.attatched? %>
     <% if facility.quiet_place.attatched? %>
     <% if facility.education.attatched? %>
    <%= link_to "Details", facility_path(sheep), class: "btn btn-leaf" %>
  <% end %>
  </ul>
</div>
