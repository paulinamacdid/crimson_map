<div class="map-opaque"
  data-controller="map"
  data-map-markers-value="<%= @marker.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>" id='map'>
</div>

<div>

      <div class="facility-background-card">
        <div class="paragraph facility-white-card">
          <div class="facility-info-small-card">
            <h1><%= @facility.name %></h1>
            <h3>
              <% ratings = @facilities.map(&:rating) %>
              <% average = (ratings.sum / ratings.count).floor(1) unless ratings.empty? %>
              <div class="stars" style="--rating: <%= average %>;" aria-label="Rating of this product is <%= average %> out of 5."></div>
            </h3>
            <h3><%= @facility.address %></h3>
            <% if @facility.toilet %>
              <i class="fa-solid fa-toilet toilet large_icon"></i>
            <% end %>
            <% if @facility.sanitary_products %>
              <i class="fa-solid fa-person-dress sanitary-products large_icon"></i>
            <% end %>
            <% if @facility.baby_change %>
              <i class="fa-solid fa-baby baby-change large_icon"></i>
            <% end %>
            <% if @facility.quiet_place %>
              <i class="fa-solid fa-volume-xmark quiet large_icon"></i>
            <% end %>
            <% if @facility.education %>
              <i class="fa-solid fa-book education large-icon"></i>
            <% end %>
            <div class="d-flex justify-content-evenly">
              <h2 class="title mt-3">Reviews:</h2>
              <% if @facility.reviews.empty? %>
              <p> currently no reviews... leave one here </p>
                <% else %>
                <%# <% @facility.reviews.each do |review| %> %>
                  <h3><i class="fa-solid fa-star paragraph"></i><%= @facility.reviews.last.rating %></h3>
                  <p class="paragraph text-wrap" style="width: 30rem;"><%= @facility.reviews.last.comment %></p>
                <%# <% end %> %>
              <% end %>
            </div>
            <%= link_to "take me there", "", class: "button show-btn" %>
            <%= link_to "create a review", new_facility_review_path(@facility), class: "button show-btn" %>
            <%# <%= link_to <i class="fa-solid fa-arrow-rotate-left"></i>, new_facility_review_path, class: "button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
    <div class="map-large"
      data-controller="map"
      data-map-markers-value="<%= @marker.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>

