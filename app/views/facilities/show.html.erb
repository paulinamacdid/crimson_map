<%= render "shared/map", markers: @markers, class: "map-small" %>
<h2>Facility Details</h2>
<p><%= @facility.name %></p>
<p><%= @facility.address %></p>
<p><%= @facility.rating %></p>
<p><%= @facility.toilet %></p>
<p><%= @facility.sanitary_products %></p>
<p><%= @facility.baby_change %></p>
<p><%= @facility.quiet_place %></p>
<p><%= @facility.education %></p>


<% @facility.reviews.each do |review| %>
  <p><%= review.comment %></p>
  <p><%= '⭐️' * review.rating %></p>
<% end %>



<h2>Write a review for <%= @facility.name %></h2>
<%= simple_form_for [@facility, @review] do |f| %>
  <%= f.input :comment, label: false, placeholder: "comment here..." %>
  <%= f.input :rating, collection: 0..5, label: false %>
  <%= f.submit "Submit review", class: "btn btn-primary" %>
<% end %>
